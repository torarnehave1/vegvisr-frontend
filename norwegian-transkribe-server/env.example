# Node.js API Configuration
NODE_ENV=production
PORT=3000
WHISPER_SERVICE_URL=http://whisper:8001
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/app/uploads

# Python Whisper Service Configuration
MODEL_NAME=NbAiLabBeta/nb-whisper-large
DEVICE=cpu
CACHE_DIR=/app/cache
FLASK_ENV=production

# Docker Configuration
COMPOSE_PROJECT_NAME=whisper-api

# Optional: SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem 